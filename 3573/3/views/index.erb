<div class="w3-main" style="margin:30px; margin-top:30px;">
  <div class="w3-row-padding">
    <% @places.each do |place| %>
      <div class="w3-quarter w3-container w3-margin-bottom" onclick="location.href = '/place/<%= place.id%>'">
        <img src="<%= place.image_url %>" alt="Norway" class="w3-hover-opacity" width="100%" height="400">
        <div class="w3-container w3-center w3-light-grey" style="width:100%; min-height: 200px">
          <p><b><%= place.name %></b></p>
          <p><%= place.short_description %></p>
          <p><%= place.address %></p>
        </div>
      </div>
    <% end %>
  </div>
</div>

