<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
  </head>

  <body>
    <nav class="navbar navbar-default">
      <div class="container">
          <a href="/">Restaurant</a>
        </div>

        <ul">
          <% if current_user %>
            <li><a href='/logout'>Log Out</a></li>
          <% else %>
            <li><a href='/login' >Log In</a></li>
            <li><a href='/registration' >Registration</a></li>
          <% end %>
        </ul>
    </nav>

    <% flash.keys.each do |type| %>
        <%= flash[type] %>
    <% end %>

    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
