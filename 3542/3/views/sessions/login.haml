!!!
%html{ :lang => "en" }
  %head
    %meta{ :charset => "utf-8" }
    %meta{ :content => "width=device-width, initial-scale=1, shrink-to-fit=no",
           :name => "viewport" }
    %title Places
    %link{ :href => ENV['BOOTSTRAP'],
           :rel => "stylesheet" }
    %link{ :href => "stylesheets/signin.css", :rel => "stylesheet" }
    %link{ :href => "stylesheets/flash.css", :rel => "stylesheet" }
  %body.text-center
    %form.form-signin{ :action => "/login", :method => "post" }
      = styled_flash
      %h1.h3.mb-3.font-weight-normal Please sign in
      %label.sr-only{ :for => "email" } Email address
      %input.form-control{ :autofocus => "",
                           :name => "email",
                           :placeholder => "Email address",
                           :required => "",
                           :type => "email" }
      %label.sr-only{ :for => "password" } Password
      %input.form-control{ :name => "password",
                           :placeholder => "Password",
                           :required => "",
                           :type => "password" }
      %button.btn.btn-lg.btn-primary.btn-block{ :type => "submit" } Sign in
      %br
      %a{ :href => "/signup" } Signup
