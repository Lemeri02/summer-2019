<div class="row">
  <div class="col-lg-12">
    <% @locations.each do |location| %>
      <h2 class="list-name">
        <%= location.name %>
      </h2>
      <img class="list-image" src=<%=location.photo_url %>>
      <p class="list-description"><%= location.description %></p>
    <% end %>
    <%= pagy_bootstrap_nav(@pagy) if @pagy.pages > 1 %>
  </div>
</div>
