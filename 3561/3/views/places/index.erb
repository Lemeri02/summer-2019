<div class="w3-main" style="margin:30px; margin-top:80px;">
  <!-- Second Photo Grid-->
  <div class="w3-row-padding">
    <% @places.each do |place| %>
      <div class="w3-quarter w3-container w3-margin-bottom" onclick="location.href = '/places/<%= place.id%>'" >
          <img src="<%= place.image_url %>" alt="Norway" class="w3-hover-opacity" width="100%" height="400">
          <div class="w3-container w3-white" style="width:100%; min-height: 300px">
            <p><b><%= place.name %></b></p>
            <p><%= place.short_description %></p>
            <p><%= place.address %></p>
          </div>
      </div>
    <% end %>
  </div>
</div>

<!-- Contact Section -->
<div class="w3-container w3-padding-large w3-grey">
  <h4 id="contact"><b>Contact Us</b></h4>
  <div class="w3-row-padding w3-center w3-padding-24" style="margin:0 -16px">
    <div class="w3-third w3-dark-grey">
      <p><i class="fa fa-envelope w3-xxlarge w3-text-light-grey"></i></p>
      <p>masha@masha.com</p>
    </div>
    <div class="w3-third w3-teal">
      <p><i class="fa fa-map-marker w3-xxlarge w3-text-light-grey"></i></p>
      <p>Minsk, Belarus</p>
    </div>
    <div class="w3-third w3-dark-grey">
      <p><i class="fa fa-phone w3-xxlarge w3-text-light-grey"></i></p>
      <p>+375330000000</p>
    </div>
  </div>
</div>
