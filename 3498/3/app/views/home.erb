<!DOCTYPE html>
<head>

   <!--- Basic Page Needs
   ================================================== -->
   <meta charset="utf-8">
	<title>Choose wisely.</title>

   <!-- CSS
    ================================================== -->
   <link rel="stylesheet" href="css/default.css">
	<link rel="stylesheet" href="css/layout.css">  
	<link rel="stylesheet" href="css/media-queries.css"> 

   <!-- Script
   ================================================== -->
	<script src="js/modernizr.js"></script>

</head>

<body>

   <header id="top">

   	<div class="row">

   		<div class="header-content twelve columns">

		      <h1 id="logo-text"><a href="index.html" title="">Choose wisely.</a></h1>

		        <a href="/registrations/signup">Sign Up</a>
                <a href="/sessions/login">Log In</a>

			</div>			

	   </div>

   <!-- Content
   ================================================== -->
   <div id="content-wrap">

   	<div class="row">

   		<div id="main" class="eight columns">

   			<% @places.each do |place| %>

	   		<article class="entry">

					<header class="entry-header">

						<h2 class="entry-title">
							<a href="single.html" title=""><%= place.name %></a>
						</h2> 				 
					
						<div class="entry-meta">
							<ul>
								<li><%= place.location %></li>
								<span class="meta-sep">&bull;</span>					
								<li><%= place.address %></li>
							</ul>
						</div> 
					 
					</header> 
					
					<div class="entry-content">
						<p><%= place.description %></p>
					</div> 

				<% end %>

				</article> <!-- end entry -->


   <!-- Java Script
   ================================================== -->
   <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
   <script>window.jQuery || document.write('<script src="js/jquery-1.10.2.min.js"><\/script>')</script>
   <script type="text/javascript" src="js/jquery-migrate-1.2.1.min.js"></script>  
   <script src="js/main.js"></script>

</body>

</html>
