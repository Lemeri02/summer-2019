<div class="container">
  <div class="jumbotron p-4 p-md-5 text-green rounded bg-dark">
    <div class="col-md-6 px-0">
      <h1 class="display-4 font-italic" style="color: #7FFF00">
        <%= @restaraunt.name %>
      </h1>
    </div>
    <div class="col-md-10 px-0">
      <p class="lead my-3" style="color: white">
        <%= @restaraunt.description %>
      </p>
      <p class="lead my-3" style="color: white">
        <%= @restaraunt.coordinate %>
      </p>
      <p class="lead my-3" style="color: white">
        <i><%= @restaraunt.average_star%> Stars</i>
      </p>
    </div>
  </div>
</div>
<% if current_user %>
<div class="container">
  <div class="card bg-dark">
    <div class="card- header">
      <p style="color: white">
      <%= @current_user.username %>, please leave comment
      </p>
    </div>
    <div class="card-body">
      <div class="form-group">
        <form action="/restaraunt/<%= @restaraunt.name%>/new" method="POST">
          <textarea name="text" class="form-control" id="textarea" rows="5" placeholder="Enter comment..."></textarea>
          <p style="color: white">Star:</p>
          <select name="star">
            <option disabled>Stars</option>
            <option value=1>
              1
            </option>
            <option value=2>
              2
            </option>
            <option value=3>
              3
            </option>
            <option value=4>
              4
            </option>
            <option value=5>
              5
            </option>
          </select>
          <button class="btn btn-dark float-right" type="submit">Submit</button>
        </form>
      </div>
    </div>
  </div>
</div>
<% end %>
<div class="container ">
  <h4 class="media pt-3">Comments</h4>
  <% @restaraunt.comments.each do |comment| %>
    <div class="my-3 p-3 bg-white rounded shadow-rg">
      <div class="media pt-3">
        <p class="media-body pb-3 mb-0 lh-125 border-bottom border-gray">
          <strong class="d-block text-gray-dark">
            <%= comment.user.username %>
          </strong>
          <span class="d-block">
            <%= comment.text %>
          </span>
          <span class="d-block float-right" >
            <i><%= comment.star %> Stars</i>
          </span>
        </p>
      </div>
    </div>
  <% end %>
</div>