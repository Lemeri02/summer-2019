<form action="/signup" method="POST">
  <div class="container">
    <h1>Input your login data</h1>
    <p>Please fill in this form to login.</p>
    
    <% if session[:error]%>
      <p class="error"><%= session[:error] %></p>
      <% session.delete(:error) %>
    <% elsif session[:notification] %>
      <p class="notification"><%= session[:notification] %></p>
      <% session.delete(:notification) %>
    <% end %>

    <label for="mail"><b>Place your e-mail</b></label>
    <input type="text" placeholder="Enter your e-mail" name="mail" autocomplete="username" required>

    <label for="password"><b>Place password</b></label>
    <input type="password" placeholder="Enter password" name="password" required>

    <label for="u_name"><b>Place your username</b></label>
    <input type="text" placeholder="Enter your username" name="username" required>

    <label for="f_name"><b>Place your first name</b></label>
    <input type="text" placeholder="Enter your first name" name="first_name" required>

    <label for="l_name"><b>Place your last name</b></label>
    <input type="text" placeholder="Enter your last name" name="last_name">

    <button type="submit" class="registerbtn">Log in!</button>
  </div>
</form>